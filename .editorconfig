root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.{h,cpp,html,ts,vue,yml,yaml,json,clang-format}]
indent_size = 2

[*.{py,java,sh,gradle,css,scss,toml}]
indent_size = 4

[*.{java,h,cpp}]
max_line_length = 80

[*.py]
max_line_length = 79

[Makefile,*.bat]
indent_style = tab
